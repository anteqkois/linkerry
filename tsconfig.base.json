{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@market-connector/connectors-framework": ["libs/connectors/framework/src/index.ts"],
      "@market-connector/coingecko": ["libs/connectors/coingecko/src/index.ts"],
      "@market-connector/nest-core": ["libs/nest-core/src/index.ts"],
      "@market-connector/engine": ["libs/engine/src/index.ts"],
      "@market-connector/shared": ["libs/shared/src/index.ts"],
      "@market-connector/tools": ["tools/index.ts"],
      "@market-connector/ui-components/*": ["libs/ui-components/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts", "./libs/*/src/**/*", "./apps/*/src/**/*", "env.d.ts"]
}
